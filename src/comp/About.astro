  //     this.scroll = scr;
  //     document.body.style.setProperty("--scroll", window.scrollY);
  //   },
  // }));
  Alpine.data("mouse", () => ({
    mouse: { x: null, y: null },
    move(ev) {
      this.mouse.x = ev.pageX;
      this.mouse.y = ev.pageY;
      document.body.style.setProperty("--mouse-x", `${this.mouse.x}px`);
      document.body.style.setProperty("--mouse-y", `${this.mouse.y}px`);
    },
  }));
});
</script>
<div
  x-data="mouse"
  @mousemove="move"
  class="[background:radial-gradient(circle_at_var(--mouse-x,50vw)_var(--mouse-y,50vh),rgba(10,33,84,0.5),rgba(0,0,0,0.5)_100vmax)]"
