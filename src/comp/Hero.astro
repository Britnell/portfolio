<script is:inline>
document.addEventListener("alpine:init", () => {
    Alpine.data("hero", () => ({
        init: "true",
        anim: "",
        last: "0",
        timer: "",
        onScroll() {
            let inOrOut = window.scrollY < 70 ? "in" : "out";
            const t = Date.now();
            const animDur = 2600;

            if (this.init) return;
            if (this.timer) clearTimeout(this.timer);
            if (this.anim === inOrOut) return;

            const since = t - this.last;
            if (since > animDur) {
                console.log(" IMM ", inOrOut);
                this.anim = inOrOut;
                this.last = t;
                return;
            }

            console.log("timer ", since);
            this.timer = setTimeout(() => {
                console.log(" DEL ", inOrOut);
                this.anim = inOrOut;
                this.last = t;
            }, animDur - since);
        },
    }));
});
</script>
<div
  x-data="hero"
  x-init="setTimeout(()=>{ anim='in'; init=false; last=Date.now() },800)"
  @scroll.window="onScroll"
>
